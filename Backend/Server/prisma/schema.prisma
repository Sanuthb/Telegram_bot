generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Message {
  id                Int       @id @default(autoincrement())
  chat_id           BigInt
  channel_name      String
  username          String
  user_id           BigInt
  groupname         String
  text              String
  timestamp         DateTime
  keywords_detected String[]  @default([])
  latitude          Float?               
  longitude         Float?               
}
